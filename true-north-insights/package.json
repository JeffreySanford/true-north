{
  "name": "@true-north-insights-workspace/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:prod",
    "dev": "npm run build:dev",
    "start": "npm run start:frontend",
    "test": "nx run-many --target=test --all",
    "lint": "npm run lint:all",
    "verify": "npm run validate:all",
    "lint:eslint": "nx run-many --target=lint --all",
    "lint:eslint:fix": "nx run-many --target=lint --all --fix",
    "lint:scss": "stylelint \"**/*.scss\" --fix",
    "lint:scss:check": "stylelint \"**/*.scss\"",
    "lint:all": "run-s lint:eslint lint:scss:check",
    "lint:fix": "run-s lint:eslint:fix lint:scss",
    "lint:draconian": "eslint . --fix",
    "test:unit": "nx run-many --target=test --all",
    "test:e2e": "nx run-many --target=e2e --all",
    "test:frontend": "nx test frontend",
    "test:backend": "nx test backend",
    "test:e2e:frontend": "nx e2e frontend-e2e",
    "test:e2e:backend": "nx e2e backend-e2e",
    "test:all": "run-s test:unit test:e2e",
    "test:coverage": "nx run-many --target=test --all --code-coverage",
    "test:draconian": "jest",
    "build:prod": "nx run-many --target=build --all --configuration=production",
    "build:dev": "nx run-many --target=build --all --configuration=development",
    "start:ci": "nx serve frontend --host 0.0.0.0 --port 4200",
    "start:all": "nx run-many --target=serve --projects=frontend,backend --parallel",
    "start:frontend": "nx serve frontend",
    "start:backend": "nx serve backend",
    "validate:security": "npm audit --audit-level high",
    "validate:lighthouse": "lhci autorun",
    "validate:all": "run-s lint:all test:unit ci:check-standalone typecheck:backend validate:security",
    "validate:draconian": "run-s flush lint:draconian test:draconian",
    "enforce:pre-commit": "node .githooks/pre-commit",
    "enforce:pre-push": "npm run validate:all",
    "enforce:install-hooks": "git config core.hooksPath .githooks && chmod +x .githooks/pre-commit",
    "flush": "rimraf dist tmp",
    "ci:check-standalone": "findstr /S /I /C:\"standalone: true\" frontend\\src\\*.ts >nul 2>&1 && (echo ❌ Found forbidden standalone component usage & exit 1) || echo ✅ No standalone components",
    "api-contract:build": "node scripts/build-api-contract.mjs",
    "typecheck:backend": "tsc --project backend/tsconfig.app.json --noEmit"
  },
  "private": true,
  "devDependencies": {
    "@angular-builders/custom-esbuild": "^20.0.0",
    "@angular-devkit/build-angular": "~20.3.0",
    "@angular-devkit/core": "~20.3.0",
    "@angular-devkit/schematics": "~20.3.0",
    "@angular-eslint/eslint-plugin": "^20.3.0",
    "@angular-eslint/template-parser": "^20.3.0",
    "@angular/cli": "~20.3.0",
    "@angular/compiler-cli": "~20.3.0",
    "@angular/language-service": "~20.3.0",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/angular": "^21.6.2",
    "@nx/devkit": "21.6.2",
    "@nx/eslint": "21.6.2",
    "@nx/eslint-plugin": "21.6.2",
    "@nx/jest": "21.6.2",
    "@nx/js": "21.6.2",
    "@nx/nest": "^21.6.2",
    "@nx/node": "21.6.2",
    "@nx/playwright": "21.6.2",
    "@nx/web": "21.6.2",
    "@nx/webpack": "21.6.2",
    "@playwright/test": "^1.36.0",
    "@schematics/angular": "~20.3.0",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@typescript-eslint/utils": "^8.45.0",
    "angular-eslint": "^20.3.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-rxjs": "^5.0.3",
    "eslint-plugin-rxjs-angular": "^2.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-preset-angular": "~14.6.1",
    "jest-util": "^29.7.0",
    "markdownlint-cli": "^0.45.0",
    "nx": "21.6.2",
    "prettier": "^2.6.2",
    "rimraf": "^5.0.7",
    "stylelint": "^16.24.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "tsx": "^4.19.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "webpack-cli": "^5.1.4",
    "npm-run-all": "^4.1.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/cdk": "^20.2.5",
    "@angular/common": "~20.3.0",
    "@angular/compiler": "~20.3.0",
    "@angular/core": "~20.3.0",
    "@angular/flex-layout": "^15.0.0-beta.42",
    "@angular/forms": "~20.3.0",
    "@angular/material": "^20.2.5",
    "@angular/platform-browser": "~20.3.0",
    "@angular/platform-browser-dynamic": "~20.3.0",
    "@angular/router": "~20.3.0",
    "@nestjs/apollo": "^13.2.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/graphql": "^13.2.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/websockets": "^11.1.6",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.0",
    "graphql": "^16.11.0",
