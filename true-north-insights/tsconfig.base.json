{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    // Allow importing JSON modules (needed for contracts/api wrapper dynamic import fallback)
    "resolveJsonModule": true,
    // Preserve existing emit metadata defaults for Angular decorators in per-project tsconfigs
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "es2022",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@typescript-eslint/utils/ts-eslint": [
        "node_modules/@typescript-eslint/utils/dist/ts-eslint/index.d.ts"
      ],
      "@styles/*": [
        "frontend/src/styles/*"
      ],
      "@types/*": [
        "types/*"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    // Helpful for JSON/CJS interop without needing esModuleInterop at every project level
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}