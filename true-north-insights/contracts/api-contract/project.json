{
  "name": "api-contract",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "contracts/api",
  "tags": ["scope:contracts", "type:spec"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/api/generated"],
      "options": {
        "command": "npm run api-contract:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["contracts/api/**/*.ts", "contracts/api/**/*.json", "contracts/api/**/*.md"]
      }
    }
  }
}
